{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!{% endblock %}

{% block body %}
    <h1>Liste des cat√©gories</h1>

    {{ form_start(form) }}
        {{ form_row(form.categoryTitle) }}
        {{ form_row(form.mediaTitle) }}
        <button type="submit">Rechercher</button>
    {{ form_end(form) }}
    
    <p>En total il y a {{ categories.totalItemCount }} categories<p>

    <ul>
        {% for category in categories %}
            <li><a href="{{path('app_category_show', {'id': category.id}) }}">{{ category.label }}</a> 
                <a href="{{ path('app_category_delete', {'id': category.id}) }}">SUPPRIMER</a>
                <a href="{{ path('app_category_edit', {'id': category.id}) }}">MODIFIER</a>
            </li>
        {% endfor %}
    </ul>

    <div class="navigation">
        {{ knp_pagination_render(categories) }}
    </div>
{% endblock %}
